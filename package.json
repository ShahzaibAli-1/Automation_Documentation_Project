{
  "name": "automation-documentation-agent",
  "version": "1.0.0",
  "description": "AI-driven system for autonomous document generation, review, and publishing",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "start:bot": "node src/telegram-bot/index.js",
    "start:api": "node src/api/server.js",
    "start:ai": "python src/ai-processor/main.py",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback"
  },
  "keywords": [
    "automation",
    "documentation",
    "ai",
    "telegram",
    "n8n",
    "notion",
    "github",
    "workflow"
  ],
  "author": "Automation Documentation Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/automation-documentation-agent.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/automation-documentation-agent/issues"
  },
  "homepage": "https://github.com/yourusername/automation-documentation-agent#readme",
  "dependencies": {
    "express": "^4.18.2",
    "telegraf": "^4.15.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "marked": "^9.1.6",
    "openai": "^4.20.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "prom-client": "^15.0.0",
    "knex": "^3.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "@types/jest": "^29.5.6",
    "@types/express": "^4.17.20",
    "@types/multer": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/bcryptjs": "^2.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
